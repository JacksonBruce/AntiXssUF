@{
    ViewData["Title"] = "测试";
}

<style>
    .column {
        position: fixed;
        top: 50px;
        bottom: 50%;
        left: 0;
        right: 0;
        overflow: auto;
        display: block;
        border: none;
        padding: 0;
        white-space: nowrap;
        z-index:1;
        background-color:white;
    }

        .column.right {
            border-top: solid 1px #ccc;
            top: 50%;
            bottom: 30px;
            overflow: hidden;
        }

        .column > textarea {
            display: block;
            width: 100%;
            height: 100%;
            border: none;
            overflow: auto;
            padding: 0;
        }
</style>
<form asp-action="Test" method="post">
    <div class="column">@Html.Raw(System.Web.HttpUtility.HtmlEncode(ViewBag.html).Replace("\n","<br />"))</div>
    <div class="column right">
        <textarea name="richText" placeholder="这里填写测试代码。。。"></textarea>
    </div>
    <div style="position:fixed;bottom:0;left:0;right:0;height:30px;text-align:center;z-index:1;background-color:white;">
        <button type="submit">提交</button>
    </div>
</form>

